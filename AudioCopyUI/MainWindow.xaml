<Window
    x:Class="AudioCopyUI.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:Microsoft.UI.Xaml.Controls"
    Closed="Window_Closed"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- App Title Bar -->
        <Grid x:Name="AppTitleBar" Height="40" Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition x:Name="LeftPaddingColumn" Width="0" />
                <ColumnDefinition x:Name="IconColumn" Width="48" />
                <ColumnDefinition x:Name="TitleColumn" Width="Auto" />
                <ColumnDefinition x:Name="DragColumn" Width="*" />
                <ColumnDefinition x:Name="RightPaddingColumn" Width="0" />
            </Grid.ColumnDefinitions>
            <AppBarButton
               x:Name="AppTitleBarBackButton"
               Grid.Column="1"
               Visibility="Visible"
               Width="Auto"
               Height="Auto"
               Margin="10,0,0,0">
                <SymbolIcon Symbol="Back" />
            </AppBarButton>

            <TextBlock x:Name="TitleTextBlock"
               Text="Your title here"
               Style="{StaticResource CaptionTextBlockStyle}"
               Grid.Column="2"
               VerticalAlignment="Center"
               Margin="4,0,0,0" />
        </Grid>

        <!-- NavigationView -->
        <controls:NavigationView
            x:Name="MainNavigationView"
            Grid.Row="1"
            PaneDisplayMode="LeftCompact"
            IsBackButtonVisible="Collapsed"
            SelectionChanged="MainNavigationView_SelectionChanged">
            <controls:NavigationView.MenuItems>
                <controls:NavigationViewItem  Tag="TransferPage" Icon="Send" Content="发送" />
                <controls:NavigationViewItem Tag="ReceivePage" Icon="Audio" Content="接受" />
                <controls:NavigationViewItem Tag="PairPage" Icon="Link" Content="配对" />
            </controls:NavigationView.MenuItems>
            <Frame x:Name="PageFrame" />

            <!-- Content Frame -->
        </controls:NavigationView>
    </Grid>
</Window>